# ~/.xprofile read sourced by display managers

LOG="${TMPDIR:=/tmp}/xprofile-$USER"

echo "-----" >>$LOG
echo "Caller: $0" >>$LOG
echo " DESKTOP_SESSION: $DESKTOP_SESSION" >>$LOG
echo " GDMSESSION: $GDMSESSION" >>$LOG
echo " SHELL: $SHELL">>$LOG

setxkbmap -model pc105 -layout "us,us,ru" -variant "colemak,," -option "caps:super,grp:rctrl_rshift_toggle,compose:rctrl-altgr"
xrdb -merge "$HOME/.Xresources"
