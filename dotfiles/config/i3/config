mode "booma" {
     bindsym r exec ~/bin/booma-terminals.sh --both
     bindsym b exec ~/bin/booma-terminals.sh --backend
     bindsym f exec ~/bin/booma-terminals.sh --frontend
     bindsym t exec ~/bin/booma-terminals.sh --terminal

     # Exit to the default mode
     bindsym Return mode "default"
     bindsym Escape mode "default"
}

bindsym $mod+Shift+b mode "booma"
