## Manual management of external displays
# https://wiki.archlinux.org/index.php/i3
# Set the shortcuts and what they do
set $mode_display Ext Screen (x) MAIN ONLY, (1) 1 HDMI RIGHT, (2) 2 HDMI RIGHT
mode "$mode_display" {
  bindsym x exec --no-startup-id ~/bin/lvds1-only.sh
  bindsym 1 exec --no-startup-id ~/bin/hdmi1-right-of-lvds1.sh
  bindsym 2 exec --no-startup-id ~/bin/hdmis-right-of-primary.sh

  # back to normal: Enter or Escape
  bindsym Return mode "default"
  bindsym Escape mode "default"
}

# Declare here the shortcut to bring the display selection menu
bindsym $mod+x mode "$mode_display"

# Xresources startup
