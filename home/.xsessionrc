setxkbmap -model pc105 -layout "us,us,ru" -variant "colemak,," -option "caps:super,grp:rctrl_rshift_toggle,compose:lwin-altgr"

# It was: xrdb -merge "$HOME/.Xresources"
# See https://bbs.archlinux.org/viewtopic.php?id=120792
export XENVIRONMENT="${HOME}/.Xresources"

# Local bins always take precedence
PATH=$HOME/.local/bin:$PATH
